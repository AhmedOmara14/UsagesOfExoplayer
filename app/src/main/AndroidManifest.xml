<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soon.karat.exoplayer">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".simple_examples.MainActivity">

        </activity>
        <activity android:name=".simple_examples.VideoPlayerActivity" />
        <activity android:name=".simple_examples.VideoPlaylistActivity" />
        <activity android:name=".simple_examples.VideoClippingActivity" />
        <activity android:name=".simple_examples.VideoLoopingActivity" />
        <activity android:name=".complex_examples.ComplexActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".complex_examples.VideoPlayerActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:launchMode="singleTop" />
        <activity android:name=".complex_examples.AdsActivity" />
    </application>

</manifest>